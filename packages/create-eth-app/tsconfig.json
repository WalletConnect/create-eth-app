{
  "compilerOptions": {
    /* Basic Options */
    "lib": ["ES2015"],
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "target": "es2015",

    /* Strict Type-Checking Options  */
    "noImplicitAny": true,
    "strict": true,

    /* Module Resolution Options */
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,

    /* Advanced Options */
    "forceConsistentCasingInFileNames": true
  }
}
